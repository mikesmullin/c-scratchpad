{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "cppbuild",
      "command": "clang",
      "args": [
        "-O0",
        "-g",
        "-m64",
        "src/main.c",
        "src/tests/unit/test001.c",
        "src/tests/unit/test002.c",
        "src/tests/unit/test003.c",
        "src/tests/unit/test004.c",
        "src/lib/Arena.c",
        "src/lib/BehaviorTree.c",
        "src/lib/Hashmap.c",
        "src/lib/List.c",
        "src/lib/Log.c",
        "src/lib/Math.c",
        "src/lib/String.c",
        "-o",
        "build/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "problemMatcher": "$gcc",
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}