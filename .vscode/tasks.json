{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "clang",
      "args": [
        "-O0",
        "-g",
        "-m64",
        "-L Ws2_32.lib",
        "src/main.c",
        "src/tests/unit/test001.c",
        "src/tests/unit/test002.c",
        "src/tests/unit/test003.c",
        "src/tests/unit/test004.c",
        "src/tests/unit/test005.c",
        "src/lib/Arena.c",
        "src/lib/Base64.c",
        "src/lib/BehaviorTree.c",
        "src/lib/Hashmap.c",
        "src/lib/List.c",
        "src/lib/Log.c",
        "src/lib/Math.c",
        "src/lib/Math2.c",
        "src/lib/Net.c",
        "src/lib/Sha1.c",
        "src/lib/String.c",
        "src/lib/Time.c",
        "-o",
        "build/main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
      },
      "group": "build",
      //"problemMatcher": "$gcc", // better to leave it off and let clangd update vscode problems list
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}